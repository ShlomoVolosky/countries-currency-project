{
  "id": null,
  "title": "Countries Currency Service",
  "tags": ["countries", "currency", "exchange"],
  "style": "dark",
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}}"
        }
      ],
      "yAxes": [
        {
          "label": "requests/sec"
        }
      ]
    },
    {
      "id": 2,
      "title": "HTTP Request Duration",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "50th percentile"
        }
      ],
      "yAxes": [
        {
          "label": "seconds"
        }
      ]
    },
    {
      "id": 3,
      "title": "Countries Processed",
      "type": "singlestat",
      "targets": [
        {
          "expr": "countries_processed_total",
          "legendFormat": "Total Countries"
        }
      ]
    },
    {
      "id": 4,
      "title": "Currency Rates Processed",
      "type": "singlestat",
      "targets": [
        {
          "expr": "currency_rates_processed_total",
          "legendFormat": "Total Currency Rates"
        }
      ]
    },
    {
      "id": 5,
      "title": "API Calls by Service",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(api_calls_total[5m])",
          "legendFormat": "{{service}} - {{status}}"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s"
}
